<main>
  <div class="container main-container">
    <form action="/create" method="post" onsubmit='return editorSave()' enctype="multipart/form-data">
      <input type="file" class="photo-area" id="photoInput" name="photo" accept="image/*">
      <div class="columns">
        <div class="column is-half">
          <label class="label is-medium">
            Data.yml&nbsp;&nbsp;
            <a href="https://qiita.com/kaityo256/items/e3884d0109223c324baf"
              class="button is-small is-info is-outlined" target="_blank">
              書式
            </a>
            <span class="is-pulled-right">
              <a class="button is-small is-primary is-outlined" id="photoBtn" href="javascript:void(0)" type="button">写真をアップ</a>
            </span>
          </label>
          <div class="control code-area">
            <textarea class="textarea" id="data_yml" name="data_yml" style="display:none"
              placeholder="data.yml" rows="15"><%= @data_yml %></textarea>
          </div>
        </div>
        <div class="column is-half">
          <label class="label is-medium">
            Style.txt&nbsp;&nbsp;
            <a href="https://qiita.com/kaityo256/items/e3884d0109223c324baf"
              class="button is-small is-info is-outlined" target="_blank">
              書式
            </a>
          </label>
          <div class="control code-area">
            <textarea class="textarea" id="style_txt" name="style_txt" style="display:none"
              placeholder="style.txt" rows="15"><%= @style_txt %></textarea>
          </div>
        </div>
      </div>
      <button class="button is-large is-primary is-fullwidth" type="submit">
        <strong>送&nbsp;&nbsp;&nbsp;&nbsp;信</strong>
      </button>
    </form>
  </div>
</main>
